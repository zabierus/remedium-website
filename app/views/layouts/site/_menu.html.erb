<div id="navbar" class="navbar-collapse collapse">
  <ul class="nav navbar-nav">
    <% @menu.children.each do |item|%>
      <% if item.children.length > 0 %>
        <li class="dropdown">
          <a href="<%= get_menu_item_type item %>" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">
            <i class="<%= "fa fa-#{item.fa_icon_name}" %>"></i><%= item.name.upcase %>
          </a>
          <i class="ddl-switch fa fa-angle-down"></i>
          <ul class="dropdown-menu">	
            <%= render 'layouts/site/menu_children', menu: item %>
          </ul>
        </li>
      <% else %>
        <li><a href="<%= get_menu_item_type item %>"><i class="<%= "fa fa-#{item.fa_icon_name}" %>"></i><%= item.name.upcase %></a></li>
      <% end %>
    <% end %>
  </ul>
</div>
