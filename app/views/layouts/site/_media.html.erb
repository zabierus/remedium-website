<section id="section_7" class="media_section">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8">
                <div class="section_head_widget animatedParent">
                <h2 class="animated fadeInLeft">Galeria</h2>
                <h5 class="animated bounceInUp">zdjÄ™cia &amp; wideo</h5>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 text-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    2020 <span class="fa fa-caret-down"></span>
                    </button>
