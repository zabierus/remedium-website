<section id="sign_in_section" class="parallax parallax_one animatedParent " data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row" style="margin-bottom: 50px">
        <div class="col-xs-12">
            <div class="text-center section_head_widget animatedParent ">
              <h2 class="animated fadeInLeft">Rejestracja</h2>
            </div>
        </div>
    </div>
    <div class="contactFormWrapper ">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "sessionform" }) do |f| %>
          <div class="row">
            <div class="col-lg-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
            </div>
            <div class="col-lg-4">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{t('site.password')} #{@minimum_password_length ? t('site.characters_minimum', count: @minimum_password_length) : ''}" %>
            </div>
            <div class="col-lg-4">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('site.password_confirmation') %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <%= f.text_field :first_name, autofocus: true, placeholder: t('site.first_name') %>
            </div>
            <div class="col-lg-6">
              <%= f.text_field :last_name, autofocus: true, placeholder: t('site.last_name') %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-lg-offset-3 sesh-button-container">
              <%= f.submit t("site.sign_up"), class: "btn btn_buy_tickets" %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12 text-center">
              <div class="sesh-link-container"><%= link_to t("site.sign_in"), new_session_path(resource_name), class: "sesh-link" %></div>
              <div class="sesh-link-container"><%= link_to t("site.forgot_your_password"), new_password_path(resource_name), class: "sesh-link" %></div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</section>
