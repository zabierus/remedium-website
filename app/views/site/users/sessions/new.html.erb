<section id="sign_in_section" class="parallax parallax_one animatedParent " data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row" style="margin-bottom: 50px">
        <div class="col-xs-12">
            <div class="text-center section_head_widget animatedParent ">
              <h2 class="animated fadeInLeft">Logowanie</h2>
            </div>
        </div>
    </div>
    <div class="contactFormWrapper ">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "sessionform" }) do |f| %>
        <div class="row">
            <div class="col-xs-6">
                <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
            </div>
            <div class="col-xs-6">
                <%= f.password_field :password, placeholder: "HasÅ‚o" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">
                <%= f.submit "Zaloguj", class: "btn btn_buy_ticket" %>
            </div>
            <div class="col-xs-4"></div>
        </div>
        <div class="row">
          <div class="col-lg-12 text-center">
            <div class="sesh-link-container"><%= link_to t('site.sign_up'), new_registration_path(resource_name), class: "sesh-link" %></div>
            <div class="sesh-link-container"><%= link_to t('site.forgot_your_password'), new_password_path(resource_name), class: "sesh-link" %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>