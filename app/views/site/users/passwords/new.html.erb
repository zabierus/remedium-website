<section id="sign_in_section" class="parallax parallax_one animatedParent " data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row" style="margin-bottom: 50px">
        <div class="col-xs-12">
            <div class="text-center section_head_widget animatedParent ">
              <h2 class="animated fadeInLeft"><%= t('site.forgot_your_password') %></h2>
            </div>
        </div>
    </div>
    <div class="contactFormWrapper ">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), validate: true, html: { id: "sessionform", method: :post }) do |f| %>
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 col-lg-offset-4">
            <%= f.submit t('site.send_me_reset_password_instructions'), class: "btn btn_buy_tickets" %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 text-center">
            <div class="sesh-link-container"><%= link_to t('site.sign_in'), new_session_path(resource_name), class: "sesh-link" %></div>
            <div class="sesh-link-container"><%= link_to t('site.sign_up'), new_registration_path(resource_name), class: "sesh-link" %></div>
            <div class="sesh-link-container"><%= link_to t('site.forgot_your_password'), new_password_path(resource_name), class: "sesh-link" %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
