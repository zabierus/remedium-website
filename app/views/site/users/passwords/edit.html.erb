<section id="sign_in_section" class="parallax parallax_one animatedParent " data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row" style="margin-bottom: 50px">
        <div class="col-xs-12">
            <div class="pull-left section_head_widget animatedParent ">
              <h2 class="animated fadeInLeft">Logowanie</h2>
            </div>
        </div>
    </div>
    <div class="contactFormWrapper ">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "contact-form", method: :post }) do |f| %>
          <div class="row">
            <div class="form-group col-lg-6 col-lg-offset-3">
              <% if @minimum_password_length %>
                <em>(<%= t('site.characters_minimum', count: @minimum_password_length) %>)</em>
              <% end %><br />
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: t('site.new_password') %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-lg-6 col-lg-offset-3">
              <label><%= t('site.confirm_new_password') %></label>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('site.confirm_new_password') %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
              <%= f.submit t('site.change_my_password'), class: "btn btn_buy_ticket" %>
            </div>
            <div class="col-lg-4"></div>
          </div>
          <div class="row">
            <div class="col-lg-12 text-center">
              <div class="sesh-link-container"><%= link_to t('site.sign_in'), new_session_path(resource_name), class: "sesh-link" %></div>
              <div class="sesh-link-container"><%= link_to t('site.sign_up'), new_registration_path(resource_name), class: "sesh-link" %></div>
              <div class="sesh-link-container"><%= link_to t('site.forgot_your_password'), new_password_path(resource_name), class: "sesh-link" %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>