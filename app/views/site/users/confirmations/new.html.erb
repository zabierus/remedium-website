<div class="contact-us container-fluid">
  <div class="container">
    <div class="section-padding"></div>
    <div class="section-header text-center">
      <h3><%= t('site.resend_confirmation_instructions') %></h3>
    </div>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { class: "contact-form", method: :post }) do |f| %>
        <div class="row">
          <div class="form-group col-lg-6 col-lg-offset-3">
            <label><%= t('site.email') %></label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3 sesh-button-container">
            <%= f.submit t('site.resend_confirmation_link') %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 text-center">
            <div class="sesh-link-container"><%= link_to t('site.sign_in'), new_session_path(resource_name), class: "sesh-link" %></div>
            <div class="sesh-link-container"><%= link_to t('site.sign_up'), new_registration_path(resource_name), class: "sesh-link" %></div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="section-padding"></div>
  </div>
</div>
<style>
.sesh-button-container {
  display: inherit!important;
  text-align: center;
  padding-bottom: 15px;
}
a.sesh-link {
  color: #34B136;
  text-transform: uppercase;
  font-family: 'montserratlight';
  letter-spacing: 1.2px;
}
a.sesh-link:hover {
  color: #000;
  text-transform: uppercase;
  font-family: 'montserratlight';
  letter-spacing: 1.2px;
}
div.sesh-link-container {
  padding-bottom: 5px;
}
</style>

